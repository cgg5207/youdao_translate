#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), "..", "lib", "youdao_translate")

case ARGV.length
when 0
  STDOUT.puts "You should input something to translate."
when 1
STDOUT.puts "1"
  YoudaoTranslate::YoudaoWord.search(ARGV[0])
else
STDOUT.puts ARGV.length
YoudaoTranslate::YoudaoWord.search(ARGV[0])
  #YoudaoTranslate::YoudaoSentence.search(ARGV.join(" "))
end
