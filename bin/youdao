#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), "..", "lib", "youdao_translate")

include YoudaoTranslate

options = Command.parse(ARGV)

if options.sentence
  YoudaoSentence.search(ARGV.join(" "))
else
  YoudaoWord.search(ARGV.shift || "english",
    {
      :basic => options.basic,
      :web => options.web, :phrase => options.phrase, :synonym => options.synonym,
      :powertrans => options.powertrans, :eetrans => options.eetrans,
      :bilingual => options.bilingual, :original => options.original, :authority => options.authority,
      :baike => options.baike,
      :language => options.language || "eng"
    })
end