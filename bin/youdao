#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), "..", "lib", "youdao_translate")

include YoudaoTranslate
options = Command.parse(ARGV)

if options.sentence
  STDOUT.puts(YoudaoSentence.search(ARGV.join(" ")))
else
  STDOUT.puts(YoudaoWord.search(ARGV.shift, basic = options.basic, web = options.web, power = options.power, bilingual = options.bilingual, original = options.original, baike = options.baike, language = options.language || "eng"))
end